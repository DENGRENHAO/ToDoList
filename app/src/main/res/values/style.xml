<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconEnd">@drawable/ic_baseline_search_24</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="successToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconEnd">@drawable/ic_baseline_check_24</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="cautiousToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="iconTint">@color/black</item>
        <item name="stIconEnd">@drawable/ic_baseline_report_gmailerrorred_24</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="exitToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconEnd">@drawable/ic_baseline_transit_enterexit_24</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="congratsToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconEnd">@drawable/ic_baseline_task_alt_24</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#f3f3f3</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">@color/grey</item>
    </style>

    <style name="customSpinnerDialog">

        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2.5dp</item>

    </style>

    <style name="customSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#5D72EC</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>